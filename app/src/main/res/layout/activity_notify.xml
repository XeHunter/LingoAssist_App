<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notify">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/close"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:src="@drawable/close"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/layer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center_vertical"
            android:text="Select your prefered time for Learning"
            android:textColor="#000000"
            android:padding="10dp"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/selectedTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/acme"
        android:text="Selected Time Comes Here"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="46dp"
        android:padding="50dp"/>


    <Button
        android:id="@+id/selectTimeBtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/selectedTime"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#F4B2B2"
        android:fontFamily="@font/acme"
        android:text="Select Time"
        android:textSize="26dp"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/setAlarmBtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/selectTimeBtn"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F4B2B2"
        android:fontFamily="@font/acme"
        android:text="Set Notification"
        android:textSize="26dp"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/cancelAlarmBtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/setAlarmBtn"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F4B2B2"
        android:fontFamily="@font/acme"
        android:text="Cancel Notification"
        android:textSize="26dp"
        app:cornerRadius="10dp" />

</RelativeLayout>