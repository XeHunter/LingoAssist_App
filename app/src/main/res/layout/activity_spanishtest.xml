<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".french.frenchtest"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/close"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:src="@drawable/close" />

        <TextView
            android:id="@+id/layer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center_vertical"
            android:text="Translate this sentence"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/test1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/l1"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/rl1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/man" />

            <ImageView
                android:id="@+id/ib2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/st1"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/ri1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/acme"
            android:text="For Hint:"
            android:textSize="20dp" />


        <LinearLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ri1"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="man"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="a"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="Women"
                android:textColor="@color/white"
                android:textSize="9dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="and"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/ri2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/acme"
            android:text="Enter your answer in sequence below:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/ts1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/ri2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/stroke"
            android:fontFamily="@font/acme"
            android:hint="Enter your sentence"
            android:inputType="text"
            android:padding="10dp" />


        <Button
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#F4B2B2"
            android:fontFamily="@font/acme"
            android:text="Check"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </RelativeLayout>
    <!--   TEST 2 -->
    <RelativeLayout
        android:id="@+id/test2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/l1"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/rll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/girl" />

            <ImageView
                android:id="@+id/iib2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/st2" />
        </LinearLayout>

        <TextView
            android:id="@+id/rii1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rll1"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/acme"
            android:text="For Hint:"
            android:textSize="20dp" />


        <LinearLayout
            android:id="@+id/rll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rii1"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="Boy"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="a"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="girl"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="And"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/rii2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rll2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/acme"
            android:text="Enter your answer in sequence below:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/tss1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/rii2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/stroke"
            android:fontFamily="@font/acme"
            android:hint="Enter your sentence"
            android:inputType="text"
            android:padding="10dp" />


        <Button
            android:id="@+id/bb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#F4B2B2"
            android:fontFamily="@font/acme"
            android:text="Check"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </RelativeLayout>
</RelativeLayout>