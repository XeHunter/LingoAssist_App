<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".french.frenchtest"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/close"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:src="@drawable/close" />

        <TextView
            android:id="@+id/layer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center_vertical"
            android:text="इस वाक्य का अनुवाद करें"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/test1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/l1"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/rl1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/man"
                android:elevation="100dp"/>

            <ImageView
                android:id="@+id/ib2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/et1"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/ri1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/acme"
            android:text="संकेत के लिए:"
            android:textSize="20dp" />


        <LinearLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ri1"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="चाय"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="एक"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="ठंडा"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="और"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/ri2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/acme"
            android:text="नीचे अपना उत्तर चुनें:"
            android:textSize="20dp" />


        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ri2"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/f1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="एक ठंडी चाय"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/f2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="एक ठंडा दिन"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/f3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="एक चाय ठंडी"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/f4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="एक सर्द रात"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

    </RelativeLayout>
    <!--   TEST 2 -->
    <RelativeLayout
        android:id="@+id/test2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/l1"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/rll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/girl"
                android:elevation="100dp"/>

            <ImageView
                android:id="@+id/iib2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/et2" />
        </LinearLayout>

        <TextView
            android:id="@+id/rii1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rll1"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/acme"
            android:text="संकेत के लिए:"
            android:textSize="20dp" />


        <LinearLayout
            android:id="@+id/rll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rii1"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="गाड़ी"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="एक"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="मकान"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="और"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/rii2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rll2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/acme"
            android:text="नीचे अपना उत्तर चुनें:"
            android:textSize="20dp" />


        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rii2"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/f11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="एक मकान और एक गाड़ी"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/f12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="एक सूरज और एक चाँद"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/f13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="एक गाड़ी और एक मकान"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/f14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#F4B2B2"
                android:fontFamily="@font/acme"
                android:text="एक कुत्ता और एक बिल्ली"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>